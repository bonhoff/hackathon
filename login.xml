<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layusu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige">


        <ImageView
            android:id="@+id/logoapp"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/lay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="480dp"
            android:background="@color/beige"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/borde"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/contrasenya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@drawable/borde"
                android:elevation="10dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="5dp" />

            <Button
                android:id="@+id/iniciasesion"
                android:layout_width="213dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/formaboton"
                android:gravity="center"
                android:text="iniciar sesion"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/gr" />

            <Button
                android:id="@+id/registrar"
                android:layout_width="214dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="120dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/formaboton"
                android:text="Registrarse"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:backgroundTint="@color/gr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/entrainvitado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/trans"
                android:text="entrar como invitado"
                android:textColor="@color/green"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>